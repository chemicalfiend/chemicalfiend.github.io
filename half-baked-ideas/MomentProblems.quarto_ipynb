      "source": [
        "# Smoothing via moving averages\n",
        "\n",
        "binsize = 150\n",
        "\n",
        "K = abs.(real.(prob))\n",
        "\n",
        "mov = []\n",
        "xaxis = []\n",
        "for i in 1:(length(enumerate(K))-binsize)\n",
        "    sum = 0\n",
        "    for j in 1:binsize\n",
        "        sum += K[i+j-1]\n",
        "    end\n",
        "    push!(mov, sum/binsize)\n",
        "    push!(xaxis, x[i])\n",
        "end"
